{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/client/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}
